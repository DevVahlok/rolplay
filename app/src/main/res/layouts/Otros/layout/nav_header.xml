<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/nav_header_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:contentDescription="@string/ficha"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/banner_dungeons_and_dragons" />

    <TextView
        android:id="@+id/nav_header_nombrePersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_header_banner"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/nav_header_correoElectronico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_header_nombrePersonaje"
        android:text="" />

    <ProgressBar
        android:id="@+id/nav_header_nivel_barraProgreso"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nav_header_nombrePersonaje"
        android:layout_toEndOf="@+id/nav_header_correoElectronico"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="10dp"
        android:progress="50"
        android:progressDrawable="@layout/progressbar_gris" />

    <TextView
        android:id="@+id/nav_header_nivelPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_header_nivel_barraProgreso"
        android:layout_alignEnd="@+id/nav_header_nivel_barraProgreso"
        android:text="" />

</RelativeLayout>