<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Equipo_layoutBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/Equipo_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/chantelli_antiqua"
            android:gravity="center_horizontal"
            android:text="@string/equipo"
            android:textColor="@color/colorPrimary"
            android:textSize="38sp" />

        <ImageView
            android:id="@+id/Equipo_Marco_moneda_cobre"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Equipo_titulo"
            android:contentDescription="@string/piezasCobre"
            app:srcCompat="@drawable/ic_fondo_moneda_cobre" />

        <TextView
            android:id="@+id/Equipo_texto_moneda_cobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_cobre"
            android:layout_marginStart="85dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="@string/piezasCobreConSalto"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Equipo_moneda_cobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_cobre"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="25dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/Equipo_Marco_moneda_plata"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Equipo_Marco_moneda_cobre"
            android:layout_toEndOf="@+id/Equipo_Marco_moneda_cobre"
            android:contentDescription="@string/piezasPlata"
            app:srcCompat="@drawable/ic_fondo_moneda_plata" />

        <TextView
            android:id="@+id/Equipo_texto_moneda_plata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_plata"
            android:layout_marginStart="266dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="@string/piezasPlataConSalto"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Equipo_moneda_plata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_plata"
            android:layout_marginStart="203dp"
            android:layout_marginBottom="25dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/Equipo_Marco_moneda_esmeralda"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Equipo_Marco_moneda_cobre"
            android:contentDescription="@string/piezasEsmeralda"
            app:srcCompat="@drawable/ic_fondo_moneda_esmeralda" />

        <TextView
            android:id="@+id/Equipo_texto_moneda_esmeralda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_esmeralda"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="@string/piezasEsmeraldaConSalto"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Equipo_moneda_esmeralda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_esmeralda"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="25dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/Equipo_Marco_moneda_oro"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Equipo_Marco_moneda_cobre"
            android:layout_toEndOf="@id/Equipo_Marco_moneda_esmeralda"
            android:contentDescription="@string/piezasOro"
            app:srcCompat="@drawable/ic_fondo_moneda_oro" />

        <TextView
            android:id="@+id/Equipo_texto_moneda_oro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_oro"
            android:layout_marginStart="270dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="@string/piezasOroConSalto"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Equipo_moneda_oro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_oro"
            android:layout_marginStart="203dp"
            android:layout_marginBottom="25dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/Equipo_Marco_moneda_platino"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Equipo_Marco_moneda_esmeralda"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/piezasPlatino"
            app:srcCompat="@drawable/ic_fondo_moneda_platino" />

        <Button
            android:id="@+id/Equipo_modificarMonedas_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Equipo_Marco_moneda_platino"
            android:layout_marginTop="20dp"
            android:text="@string/modificarMonedas" />

        <TextView
            android:id="@+id/Equipo_texto_moneda_platino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_platino"
            android:layout_marginStart="168dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="@string/piezasPlatinoConSalto"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Equipo_moneda_platino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Equipo_Marco_moneda_platino"
            android:layout_marginStart="113dp"
            android:layout_marginBottom="25dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Equipo_Recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Equipo_modificarMonedas_btn"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/Equipo_anadirObjeto_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Equipo_Recycler"
            android:layout_marginTop="20dp"
            android:text="@string/anadirObjeto" />

    </RelativeLayout>

</ScrollView>