<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Personalidad_layoutBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/Personalidad_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/chantelli_antiqua"
            android:gravity="center_horizontal"
            android:text="@string/personalidad"
            android:textColor="@color/colorPrimary"
            android:textSize="38sp" />

        <!-- Texto naranjita pequeÃ±o abajo a la derecha del texto blanco -->
        <TextView
            android:id="@+id/Personalidad_texto_RasgosPersonalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Personalidad_titulo"
            android:layout_centerHorizontal="true"
            android:text="@string/rasgosPersonalidad"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <View
            android:id="@+id/Personalidad_barra_RasgosPersonalidad"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/Personalidad_texto_RasgosPersonalidad"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/Personalidad_valor_RasgosPersonalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
